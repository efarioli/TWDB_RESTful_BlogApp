<% include ./partials/header %>
<div class="ui main text container segment rounded">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui image centered rounded" src="<%= blog.image %>" >            
        </div>
        <div class="content">
            <span><%= blog.created.toString().substring(0,24) %></span>
        </div>
        <div class="ui description  segment">
            <%- blog.body %>
        </div>
        <a class="ui orange button" href="/blogs/<%= blog._id %>/edit">EDIT</a>
        <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button class="ui red button">DELETE</button>
        </form>
    </div>
</div>

<% include ./partials/footer %>